extends ./index.jade
block content
  .mdl-grid.mdl-cell.mdl-cell--9-col-desktop.mdl-cell--12-col-tablet.mdl-cell--4-col-phone.mdl-cell--top(ng-controller="showReleaseBacklogCtrl", ng-init="init('#{proyecto._id}','#{release._id}')")
    .mdl-cell.mdl-cell--3-col-desktop.mdl-cell--3-col-tablet.mdl-cell--2-col-phone
      .mdl-card.mdl-shadow--2dp
        .mdl-card__title
          h2.mdl-card__title-text #{proyecto.nombreProyecto}
        .mdl-card__supporting-text
          p.letras-negras.
            #{proyecto.descripcionProy}
      br
      .mdl-card.mdl-shadow--2dp
        .mdl-card__title
          h2.mdl-card__title-text Release: #{release.nombreRelease}
        .mdl-card__supporting-text
          p.letras-negras.
            #{release.descripcionRelease}
      br

    .mdl-cell.mdl-cell--9-col-desktop.mdl-cell--6-col-tablet.mdl-cell--5-col-phone
      .mdl-card.mdl-shadow--2dp
        .mdl-card__title
          h2.mdl-card__title-text Historias sin Asignar
      .mdl-card-2.mdl-shadow--2dp-2
        .mdl-grid.mdl-cell.mdl-cell--9-col-desktop.mdl-cell--12-col-tablet.mdl-cell--4-col-phone.mdl-cell--top
          .mdl-cell.mdl-cell--4-col-desktop.mdl-cell--4-col-tablet.mdl-cell--2-col-phone(ng-repeat="historia in historias")
              .mdl-card.mdl-shadow--2dp
                  .mdl-card__title
                      h2.mdl-card__title-text {{historia.nombre}}
                  .mdl-card__supporting-text
                      {{historia.descripcion}}
                      button(class="mdl-button blank-sprint-button" type="button" ng-click="agregarHistoriaSprint(historia._id)") Agregar historia
      .mdl-card.mdl-shadow--2dp
        .mdl-card__title
          h2.mdl-card__title-text Historias para el Sprint
      .mdl-card-2.mdl-shadow--2dp-2
        .mdl-grid.mdl-cell.mdl-cell--9-col-desktop.mdl-cell--12-col-tablet.mdl-cell--4-col-phone.mdl-cell--top
          .mdl-cell.mdl-cell--4-col-desktop.mdl-cell--4-col-tablet.mdl-cell--2-col-phone(ng-repeat="historia in historiasSprint")
              .mdl-card.mdl-shadow--2dp
                  .mdl-card__title
                      h2.mdl-card__title-text {{historia.nombre}}
                  .mdl-card__supporting-text
                      p.letras-negras.
                       {{historia.descripcion}}
                      button(class="mdl-button blank-sprint-button" type="button" ng-click="agregarHistoriaSprint(historia._id)") Agregar historia
    .mdl-cell.mdl-cell--3-col-desktop.mdl-cell--3-col-tablet.mdl-cell--2-col-phone
      .mdl-card.mdl-shadow--2dp
        .mdl-card__title
          h2.mdl-card__title-text Crear Sprint
        .mdl-card__supporting-text
          div
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                input.mdl-textfield__input(type="text" id="nombreSprint" name="nombreSprint" ng-model="sprint.nombreSprint" style="color: black" required="required")
                label(for="nombreSprint" class="mdl-textfield__label") Nombre del Sprint
          div
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              textarea(class="mdl-textfield__input" type="text" ng-model="sprint.descripcionSprint" rows="4" id="descripcionSprint" name="descripcionSprint")
              label(class="mdl-textfield__label" for="descripcionSprint") Descripci√≥n del Sprint
          ul.mdl-list
            li.mdl-list__item(ng-repeat="historia in historiasSprint")
              span.mdl-list__item-primary-content.list__item-text.letras-negras {{historia.nombre}}
          button.mdl-button(type="submit" ng-click="crearSprint()") Crear
    .mdl-cell.mdl-cell--3-col-desktop.mdl-cell--12-col-tablet.mdl-cell--2-col-phone(ng-if="historiaSeleccionada!==''")
      .mdl-card.mdl-shadow--2dp.trending
        .mdl-card__title
          h2.mdl-card__title-text Detalles De Historia
        .mdl-card__supporting-text
          .mdl-grid
            label(for="nombre" class="mdl-textfield__label") Nombre
            label(name="nombre" class="mdl-textfield__label")
            br
            label(for="descripcion" class="mdl-textfield__label") Descripcion
            label(name="descripcion" class="mdl-textfield__label")
            br
            label(for="descripcion" class="mdl-textfield__label") Descripcion
            label(name="descripcion" class="mdl-textfield__label")
            br
            label(for="cuando" class="mdl-textfield__label") Cuando
            label(name="cuando" class="mdl-textfield__label")
            br
            label(for="entonces" class="mdl-textfield__label") Entonces
            label(name="entonces" class="mdl-textfield__label")
            br
            label(for="como" class="mdl-textfield__label") Como
            label(name="como" class="mdl-textfield__label")
            br
            label(for="quiero" class="mdl-textfield__label") Quiero
            label(name="quiero" class="mdl-textfield__label")
            br
            label(for="deTalManeraQue" class="mdl-textfield__label") De Tal Manera Que
            label(name="deTalManeraQue" class="mdl-textfield__label")
            br
            label(for="prioridad" class="mdl-textfield__label") Prioridad
            label(name="prioridad" class="mdl-textfield__label")
    .mdl-cell.mdl-cell--9-col-desktop.mdl-cell--12-col-tablet.mdl-cell--5-col-phone
      .mdl-card.mdl-shadow--2dp
        .mdl-card__title
          h2.mdl-card__title-text Sprints Actuales
      .mdl-card-2.mdl-shadow--2dp-2
        .mdl-grid.mdl-cell.mdl-cell--9-col-desktop.mdl-cell--12-col-tablet.mdl-cell--4-col-phone.mdl-cell--top
          .mdl-cell.mdl-cell--4-col-desktop.mdl-cell--4-col-tablet.mdl-cell--2-col-phone(ng-repeat="sprint in sprints")
              .mdl-card.mdl-shadow--2dp
                  .mdl-card__title
                      h2.mdl-card__title-text {{sprint.nombreSprint}}
                  .mdl-card__supporting-text
                      {{sprint.descripcionSprint}}
                      button(class="mdl-button blank-sprint-button" type="button" ng-click="agregarHistoriaSprint(historia._id)") Agregar historia
